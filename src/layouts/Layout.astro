---
import Sidebar from "../components/sidebar/Sidebar.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Web developer con una laurea in Ingegneria Gestionale
    conseguita presso il Politecnico di Milano." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex min-h-screen dark">
    <Sidebar />
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  *::-webkit-scrollbar {
    @apply w-1.5 bg-green-500;
  }

  *::-webkit-scrollbar-thumb {
    @apply bg-green-500  hover:bg-green-600;
  }

  *::-webkit-scrollbar-track {
    @apply bg-green-900/80;
  }
</style>
