---
import { Image } from 'astro:assets';
import pic from '../images/profilepic.jpeg'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="it">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex min-h-screen">
        
        <aside class="w-96 p-12 dark:bg-slate-900 bg-slate-100 shadow space-y-12">
            <Image src={pic} alt="Francesco Sommaruga" class="rounded-full w-24" />
                <div>
                    <h3 class="text-xl font-bold">
                        Contatti
                    </h3>
                    <div class="bg-slate-700 h-1 w-full rounded-full mb-8"></div>
                    <ul class="space-y-2">
                        <li class="">
                            <a href="mailto:francesco.sommaruga@live.it" class="block bg-slate-200 hover:bg-slate-600 hover:text-white transition-all rounded-lg p-4 ">
                                francesco.sommaruga@live.it</a>
                        </li>
                        <li class="">
                            <a href="tel:+393496123456" class="block bg-slate-200 hover:bg-slate-600 hover:text-white transition-all rounded-lg p-4 ">
                                +39 331 133 4873</a>

                        </li>
                    </ul>
                </div>

                <div>
                    <h3 class="text-xl font-bold">
                        Lingue
                    </h3>
                    <div class="bg-slate-700 h-1 w-full rounded-full mb-8"></div>
                    <div class="grid grid-cols-4 grid-rows-3 gap-2">
                            
                                <p class="font-semibold row-span-1 row-start-1 col-span-1 block">Italiano</p>
                                <p class="font-semibold row-span-1 row-start-2 col-span-1 block">Inglese</p>
                                <p class="font-semibold row-span-1 row-start-3 block">Spagnolo</p>
                     

                            <div class="row-span-1 col-span-3">
                                <div class="h-8 w-full bg-slate-800 rounded-lg"></div>
                            </div>
                            <div class="row-span-1 col-span-3">
                                <div class="h-8 w-[60%] bg-slate-800 rounded-lg"></div>
                            </div> <div class="row-span-1 col-span-3">
                                <div class="h-8 w-[30%] bg-slate-800 rounded-lg"></div>
                            </div>

                            
                    </div>

                    
                </div>
                
                <div>
                    <h3 class="text-xl font-bold">
                        Competenze
                    </h3>
                    <div class="bg-slate-700 h-1 w-full rounded-full mb-8"></div>

                    <ul class="space-y-2">
                        <li class="">
                            <a href="mailto:francesco.sommaruga@live.it" class="block bg-slate-200 hover:bg-slate-600 hover:text-white transition-all rounded-lg p-4 ">
                                </a>
                        </li>
                        <li class="">
                            <a href="tel:+393496123456" class="block bg-slate-200 hover:bg-slate-600 hover:text-white transition-all rounded-lg p-4 ">
                                +39 331 133 4873</a>

                        </li>
                    </ul>
                </div>
        </aside>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
</style>
