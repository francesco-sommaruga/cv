---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import ToggleDarkMode from "../components/ToggleDarkMode.astro";
---

<Layout title="Francesco Sommaruga - CV">
  <div
    class="flex-1 max-w-7xl mx-auto dark:bg-slate-800 dark:text-white text-slate-800"
  >
    <header class="flex w-full justify-between p-6">
      <div class="flex flex-col">
        <h1 class="font-black text-3xl">Francesco Sommaruga</h1>
        <h2 class="text-slate-600 dark:text-slate-300">
          Web Developer / Management Engineer
        </h2>
      </div>
      <ToggleDarkMode />
